#include <stdio.h>
#include <string.h>

struct file {
    char name[20];
};

int main() {
    struct file directory[10];
    int choice, count = 0;
    char filename[20];

    while (1) {
        printf("\n1. Create File\n2. List Files\n3. Exit\nEnter choice: ");
        scanf("%d", &choice);

        if (choice == 1) {
            printf("Enter file name: ");
            scanf("%s", filename);
            strcpy(directory[count].name, filename);
            count++;
        } else if (choice == 2) {
            printf("Files:\n");
            for (int i = 0; i < count; i++) {
                printf("%s\n", directory[i].name);
            }
        } else {
            break;
        }
    }

    return 0;
}
